
@{
    ViewData["Title"] = "Aprendizaje";
    Layout = "~/Views/Shared/Ajustes_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Agregar aprendizaje de Curso</h1>
    <form action="/docente/Aprendizaje" enctype="multipart/form-data" class="col-12" method="post">
        <div class="mb-3">
            <label class="form-label" for="IdCurso">Selecciona un curso</label>
            <select name="IdCurso" onchange="cargarApp()" class="form-control" required>
                <option value="">-- Selecciona un curso --</option>
                @foreach (var item in ViewBag.Cursos)
                {
    <option value="@item.Id">@item.Nombre</option>}
            </select>
            <p class="alert-danger">@Html.ValidationMessage("IdCurso")</p>
        </div>

        <div class="mb-3">
            <label class="form-label" for="Descripcion">Agregar un nuevo aprendizaje al curso</label>
            <input type="text" class="form-control" placeholder="Aprendizaje" name="Descripcion" required />
            <p class="alert-danger">@Html.ValidationMessage("Descripcion")</p>
        </div>

        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar</button>
        <a class="btn btn-danger" href="/ajustes/tablero"><i class="fas fa-window-close"></i> Cancelar</a>
    </form>
    <br />
    <br />
    <div id="aprendizajes">
    </div>
</div>
