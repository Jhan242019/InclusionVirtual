<!-- Courses Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Cursos</h6>
            <h1 class="mb-5">Cursos Populares</h1>
        </div>
        <div class="row g-4 justify-content-center">
            <!--INICIO FOREACH-->
            @for (int i = 0; i < f; i++)
            {
                var item = cur[i];
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="course-item bg-light">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src="@item.Imagen" alt="@item.Nombre">
                            <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                <a href="/curso/cursos" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Leer más</a>
                                <a href="/Curso/Detalle?idCurso=@item.Id" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Iniciar ahora</a>
                            </div>
                        </div>
                        <div class="text-center p-4 pb-0">
                            @if (item.Precio > 0)
                            {
                                <h3 class="mb-0" style="color:tomato;">S/ @item.Precio</h3>
                            }
                            else
                            {
                                <h3 class="mb-0" style="color:tomato;">Gratuito</h3>
                            }
                            <div class="mb-3">
                                <small class="fa fa-star text-primary" onclick="calificar1(this)" style="cursor: pointer;" id="1estrella"></small>
                                <small class="fa fa-star text-primary" onclick="calificar1(this)" style="cursor: pointer;" id="2estrella"></small>
                                <small class="fa fa-star text-primary" onclick="calificar1(this)" style="cursor: pointer;" id="3estrella"></small>
                                <small class="fa fa-star text-primary" onclick="calificar1(this)" style="cursor: pointer;" id="4estrella"></small>
                                <small class="fa fa-star text-primary" onclick="calificar1(this)" style="cursor: pointer;" id="5estrella"></small>
                            </div>
                            <h5 class="mb-4">@item.Nombre</h5>
                        </div>
                        <div class="d-flex border-top">
                            <small class="flex-fill text-center border-end py-2"><i class="bi bi-person-circle text-primary me-2"></i>@item.Docente.Nombres</small>
                            <small class="flex-fill text-center border-end py-2"><i class="fas fa-shapes text-primary me-2"></i>@item.Categoria.Nombre</small>
                            <small class="flex-fill text-center py-2"><i class="fas fa-chalkboard-teacher text-primary me-2"></i>@item.Modulos.Count Secciones</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Courses End -->
